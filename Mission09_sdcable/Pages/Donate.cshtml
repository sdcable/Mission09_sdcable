@page
@model Mission09_sdcable.Pages.DonateModel
@{
}

<h2>Your basket</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Items</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var i in Model.basket.Items)
        {
        <tr>
            <td>@i.Book.Title</td>
            <td>@i.Quantity</td>
            <td>25</td>
            <td>@(i.Quantity * 25)</td>
        </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnURL">Continue Donating</a>
</div>